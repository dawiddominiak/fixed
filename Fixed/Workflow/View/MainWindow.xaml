<Window x:Class="Fixed.Workflow.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fixed"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Fixed" Height="350" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="142*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="SelectOperationDateLabel" Content="Select operation date" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Grid.Column="1"/>
        <DatePicker x:Name="SelectOperationDateDatePicker" Margin="10,41,70.333,0" VerticalAlignment="Top" Grid.Column="1" SelectedDate="{x:Static sys:DateTime.Now}"/>
        <Button x:Name="ManageButton" Content="Manage" Margin="138,70,70.333,0" VerticalAlignment="Top" Grid.Column="1" Click="ManageButton_Click"/>
    </Grid>
</Window>
