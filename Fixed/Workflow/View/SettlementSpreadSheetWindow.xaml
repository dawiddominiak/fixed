<Window x:Class="Fixed.Workflow.View.SettlementSpreadSheetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fixed.Workflow.View"
        mc:Ignorable="d"
        Closing="SettlementSpreadSheetWindow_OnClosing"
        Title="Settlement spread sheet" Height="600" Width="800" MinWidth="800" MinHeight="600" WindowState="Maximized">
    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_File">
                    <MenuItem Header="_Open"/>
                    <MenuItem Header="_Close"/>
                    <MenuItem Header="_Save All"/>
                </MenuItem>
                <MenuItem Header="_Data">
                    <MenuItem Header="_Routes" />
                    <MenuItem Header="_Shops" />
                    <MenuItem Header="_Products"></MenuItem>
                </MenuItem>
            </Menu>
            <TabControl x:Name="RouteVariantsTabControl" DockPanel.Dock="Top" Margin="10">
                <TabItem Header="No route defined">
                    <Grid Background="#FFE5E5E5"/>
                </TabItem>
            </TabControl>

        </DockPanel>

    </Grid>
</Window>
